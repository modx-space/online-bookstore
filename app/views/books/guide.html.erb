<div class="guide-wrapper">
  <%= render "layouts/header" %>

  <form class="form-horizontal">
    <div class="form-group">
      <div class="col-md-offset-2 col-md-8">
        <input type="text" class="form-control input-lg" id="keyword">
      </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-4 col-md-4">
        <button type="submit" class="btn btn-success">按需检索</button>
        <a class="btn btn-primary" href="<%= books_path %>">随便看看</a>
      </div>
    </div>
  </form>

  <h2><span class="label label-info">新书上架</span></h2>
  <div id="new-books" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
      <li data-target="#new-books" data-slide-to="0" class="active"></li>
      <li data-target="#new-books" data-slide-to="1"></li>
      <li data-target="#new-books" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
      <div class="item active">
        <img class="center-block" src="https://img3.doubanio.com/lpic/s28453934.jpg">
      </div>
      <div class="item">
        <img class="center-block" src="https://img3.doubanio.com/lpic/s28600765.jpg">
      </div>
      <div class="item">
        <img class="center-block" src="https://img3.doubanio.com/lpic/s28505371.jpg">
      </div>
    </div>
    <!-- Controls -->
    <a class="left carousel-control" href="#new-books" role="button" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#new-books" role="button" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>
